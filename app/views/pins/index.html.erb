<p id="notice"><%= notice %></p>
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box">
      <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
      <%= pin.description %><br/>

      <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary' %><br/>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %><br/>
      <% end %>
    </div>
  <% end %>
</div>
